{
    "name": "cblink/yapi-doc",
    "license": "MIT",
    "require": {
        "ext-json": "*",
        "laravel/framework": "^5.5|~6.0|~7.0",
        "cblink/yapi-sdk": "^0.1.0",
        "cblink/laravel-dto": "^0.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "orchestra/testbench": "^5.1",
        "mockery/mockery": "^1.2",
        "friendsofphp/php-cs-fixer": "^2.16",
        "brainmaestro/composer-git-hooks": "^2.7"
    },
    "autoload": {
        "psr-4": {
            "Cblink\\YApiDoc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cblink\\YApiDoc\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-update-cmd": "cghooks update",
        "post-merge": "composer install",
        "post-install-cmd": [
            "cghooks add --ignore-lock",
            "cghooks update"
        ],
        "cghooks": "./vendor/bin/cghooks",
        "check-style": "./vendor/bin/php-cs-fixer fix --using-cache=no --diff --config=.php_cs --dry-run --ansi",
        "fix-style": "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php_cs --ansi",
        "test": "./vendor/bin/phpunit --colors=always"
    },
    "scripts-descriptions": {
        "test": "Run all tests.",
        "check-style": "Run style checks (only dry run - no fixing!).",
        "fix-style": "Run style checks and fix violations."
    },
    "extra": {
        "laravel": {
            "providers": [
                "Cblink\\YApiDoc\\ServiceProvider"
            ]
        }
    }
}
